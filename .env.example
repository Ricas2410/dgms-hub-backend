# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# For Render PostgreSQL, use DATABASE_URL (automatically provided)
DATABASE_URL=postgres://username:password@hostname:5432/database_name
# Legacy format (optional)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dgms_hub_dev
DB_USER=postgres
DB_PASSWORD=postgres

# JWT Configuration
JWT_SECRET=dgms_hub_super_secret_jwt_key_for_development_only_change_in_production
JWT_EXPIRES_IN=24h

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:19006

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Configuration
